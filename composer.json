{
  "name": "forgravity/coding-standards",
  "type": "phpcodesniffer-standard",
  "description": "PHP_CodeSniffer rules (sniffs) to enforce CosmicGiant coding conventions",
  "keywords": [
    "phpcs",
    "standards",
    "WordPress",
    "ForGravity",
    "CosmicGiant"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Contributors",
      "homepage": "https://github.com/ForGravity/coding-standards/graphs/contributors"
    }
  ],
  "require" : {
    "php" : ">=5.6",
    "phpcompatibility/php-compatibility": "@stable",
    "phpcompatibility/phpcompatibility-wp": "@stable",
    "sirbrillig/phpcs-variable-analysis": "^2.11",
    "wp-coding-standards/wpcs": "^3.0.0",
    "sirbrillig/phpcs-import-detection": "^1.3"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
