{
  "name": "forgravity/coding-standards",
  "type": "phpcodesniffer-standard",
  "description": "PHP_CodeSniffer rules (sniffs) to enforce CosmicGiant coding conventions for Laravel",
  "keywords": [
    "phpcs",
    "standards",
    "Laravel",
    "ForGravity",
    "CosmicGiant"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Contributors",
      "homepage": "https://github.com/ForGravity/coding-standards/graphs/contributors"
    }
  ],
  "require" : {
    "php" : ">=8.4",
    "phpcompatibility/php-compatibility": "@stable",
    "sirbrillig/phpcs-variable-analysis": "^2.11",
    "sirbrillig/phpcs-import-detection": "^1.3",
    "slevomat/coding-standard": "^8.0",
    "squizlabs/php_codesniffer": "^3.7"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
